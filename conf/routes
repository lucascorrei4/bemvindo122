# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
%{ctx = play.configuration.getProperty('apache.context', '')}%

# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     ${ctx}/                                       				Application.index

# Home page
POST    ${ctx}/savequickaccount										Application.saveQuickAccount
GET    	${ctx}/como-funciona										Application.howItWorks
GET    	${ctx}/contato												Application.contact
POST	${ctx}/chalk-moip-response									Application.moipResponse
GET     ${ctx}/novo			                     					Application.newAccount
POST    ${ctx}/novo			       				 					Application.saveNewAccount
POST    ${ctx}/primeiros-passos    				 					Application.saveNewInstitution
POST    ${ctx}/follow	 		   				 					Application.follow
GET    	${ctx}/follow	 		   				 					Application.follow
GET     ${ctx}/acompanhe	 		   				 				Application.followAdmin

# Admin Update Order
GET		${ctx}/admin/atualizar-pedidos								OrderOfServiceController.updateOrder
POST    ${ctx}/updateRadioValue	   				 					OrderOfServiceController.updateRadioValue

# Admin Clients

GET		${ctx}/admin/clientes								ClientController.list
GET		${ctx}/admin/clientes/new							ClientController.blank
GET		${ctx}/admin/clientes/{id}							ClientController.show
GET		${ctx}/admin/clientes/{id}/{field}					ClientController.attachment
GET		${ctx}/admin/clientes/{id}/edit						ClientController.edit
POST	${ctx}/admin/clientes								ClientController.create
POST	${ctx}/admin/clientes/{id}							ClientController.save
DELETE	${ctx}/admin/clientes/{id}							ClientController.delete

# Admin Services

GET		${ctx}/admin/servicos								ServiceController.list
GET		${ctx}/admin/servicos/new							ServiceController.blank
GET		${ctx}/admin/servicos/{id}							ServiceController.show
GET		${ctx}/admin/servicos/{id}/{field}					ServiceController.attachment
GET		${ctx}/admin/servicos/{id}/edit						ServiceController.edit
POST	${ctx}/admin/servicos								ServiceController.create
POST	${ctx}/admin/servicos/{id}							ServiceController.save
DELETE	${ctx}/admin/servicos/{id}							ServiceController.delete

# Admin Steps

GET		${ctx}/admin/etapas-dos-servicos								StepController.list
GET		${ctx}/admin/etapas-dos-servicos/new							StepController.blank
GET		${ctx}/admin/etapas-dos-servicos/{id}							StepController.show
GET		${ctx}/admin/etapas-dos-servicos/{id}/{field}					StepController.attachment
GET		${ctx}/admin/etapas-dos-servicos/{id}/edit						StepController.edit
POST	${ctx}/admin/etapas-dos-servicos								StepController.create
POST	${ctx}/admin/etapas-dos-servicos/{id}							StepController.save
DELETE	${ctx}/admin/etapas-dos-servicos/{id}							StepController.delete

# Admin Order of Services

GET		${ctx}/admin/ordens-de-servico								OrderOfServiceController.list
GET		${ctx}/admin/ordens-de-servico/new							OrderOfServiceController.blank
GET		${ctx}/admin/ordens-de-servico/{id}							OrderOfServiceController.show
GET		${ctx}/admin/ordens-de-servico/{id}/{field}					OrderOfServiceController.attachment
GET		${ctx}/admin/ordens-de-servico/{id}/edit					OrderOfServiceController.edit
POST	${ctx}/admin/ordens-de-servico								OrderOfServiceController.create
POST	${ctx}/admin/ordens-de-servico/{id}							OrderOfServiceController.save
DELETE	${ctx}/admin/ordens-de-servico/{id}							OrderOfServiceController.delete

# Administration
GET    	${ctx}/popular                     			PopulateDB.populate
GET     ${ctx}/primeiros-passos						Admin.firstStep
GET     ${ctx}/admin/?	                      		Admin.index
GET     ${ctx}/admin/{id}                     		Admin.form
POST    ${ctx}/admin/{id}                     		Admin.save
GET     ${ctx}/admin/new                        	Admin.form
POST    ${ctx}/admin/new                        	Admin.save

# Import CRUD routes
*       ${ctx}/admin                      			module:crud


# Import Secure routes
*      	${ctx}/                            			module:secure

# Ignore favicon requests
GET     ${ctx}/favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     ${ctx}/public/                                staticDir:public

# Catch all
*       ${ctx}/{controller}/{action}                  {controller}.{action}
